# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Set inner/outer gaps
gaps inner 8
# gaps outer 20
gaps top 10
gaps bottom 0
gaps left 10
gaps right 10

# Hide titlebar on windows:
default_border pixel 3

# Default Font
font pango:Noto Sans Regular 10

# Thin borders:
smart_borders on

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

## Window decoration
# class                 border  backgr. text    indicator child_border
client.focused          #ffffff #434c5e #eceff4 #B0ABEB   #ABC7EBaa
client.focused_inactive #ffffff #2e3440 #d8dee9 #4c566a   #4c566a
client.unfocused        #ffffff #2e3440 #d8dee9 #4c566a   #4c566a
client.urgent           #ebcb8b #ebcb8b #2e3440 #ffffff   #ebcb8b

